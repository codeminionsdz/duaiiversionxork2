# ============================================================
# دوائي - متغيرات البيئة (مثال)
# ============================================================
# انسخ هذا الملف إلى `.env.local` واملأ القيم الحقيقية هناك.
# هذا الملف هو مثال فقط — لا تضع مفاتيح حقيقية في مستودع الكود.

# دليل سريع:
# - متغيرات تبدأ بـ `NEXT_PUBLIC_` ستكون متاحة في الكلاينت (العميل).
#   اجعل القيم هناك آمنة للظهور علناً (مثال: معرفات عامة، مفاتيح عامة فقط).
# - المتغيرات WITHOUT `NEXT_PUBLIC_` يجب أن تبقى سرّية على الخادم فقط.
#   لا تُضمّنها في الكلاينت أو في الرمز الذي يُستعمل في المتصفح.

# ----------------------------------------------------------------
# Supabase (مطلوب عادة)
# ----------------------------------------------------------------
# عنوان المشروع (آمن للظهور على العميل)
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL

# مفتاح anon (آمن للعميل لكن يُعامل كـ public فقط)
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# مفتاح الخدمة (Server-only): MUST NEVER be exposed to the client.
# استخدم هذا المفتاح فقط في وظائف الخادم (server-side) أو بيئة آمنة.
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# عنوان التطبيق (للروابط المطلقة في الإشعارات و SSR)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ----------------------------------------------------------------
# Firebase (اختياري)
# ----------------------------------------------------------------
# مفاتيح/قيم من Firebase التي يُسمح بوجودها في الكلاينت عادةً تبدأ بـ NEXT_PUBLIC_
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=YOUR_FIREBASE_AUTH_DOMAIN
NEXT_PUBLIC_FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID

# ----------------------------------------------------------------
# VAPID Keys للإشعارات (Web Push)
# ----------------------------------------------------------------
# لتوليد مفاتيح VAPID (مثال):
# node -e "const webpush=require('web-push');console.log(JSON.stringify(webpush.generateVAPIDKeys(), null, 2))"
# انسخ `publicKey` إلى `NEXT_PUBLIC_VAPID_PUBLIC_KEY` (مسموح للعميل).
# انسخ `privateKey` إلى `VAPID_PRIVATE_KEY` واحتفظ به في الخادم فقط.

# المفتاح العام (عميل/آمن للظهور)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=YOUR_VAPID_PUBLIC_KEY

# المفتاح الخاص (Server-only): لا تكشفه أبداً في الواجهة الأمامية
VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY

# بريد المرسل المستخدم مع VAPID (مثال: mailto:admin@your-app.com)
VAPID_SUBJECT=mailto:YOUR_ADMIN_EMAIL

# ----------------------------------------------------------------
# Analytics (اختياري)
# ----------------------------------------------------------------
NEXT_PUBLIC_ANALYTICS_ID=YOUR_ANALYTICS_ID

# ----------------------------------------------------------------
# Sentry (اختياري لكن يُنصح به في الإنتاج)
# ----------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=YOUR_PUBLIC_SENTRY_DSN
SENTRY_DSN=YOUR_SERVER_SENTRY_DSN
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_ENV=production

# ----------------------------------------------------------------
# Upstash / Redis (اختياري للـ rate limiting أو الكاش)
# ----------------------------------------------------------------
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ----------------------------------------------------------------
# Debug / Log level (آمن للعميل إذا أردت)
# قيمة مقترحة: debug | info | warn | error
NEXT_PUBLIC_LOG_LEVEL=debug

# ----------------------------------------------------------------
# ملاحظات أمان إضافية
# ----------------------------------------------------------------
# - تأكد أن `SUPABASE_SERVICE_ROLE_KEY` و `VAPID_PRIVATE_KEY` لا تُحفظ في مستودع الكود.
# - إذا اكتشفت أن أي مفتاح حقيقي تم رفعه إلى المستودع، فقم بتدويره فوراً.
# - استخدم أدوات إدارة أسرار (مثل: Vault، GitHub Secrets، أو environment variables في CI)
#   لتخزين المفاتيح في بيئة الإنتاج بدلاً من ملفات النص العادية.
